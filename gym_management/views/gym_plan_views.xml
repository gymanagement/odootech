<odoo>
    <data>
        <record id="gym_workout_plan_view_list" model="ir.ui.view">
            <field name="name">gym.workout.plan.list</field>
            <field name="model">gym.workout.plan</field>
            <field name="arch" type="xml">
                <list string="Workout Plans" decoration-success="state == 'active'" decoration-info="state == 'completed'">
                    <field name="name"/>
                    <field name="member_id"/>
                    <field name="trainer_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="gym_workout_plan_view_form" model="ir.ui.view">
            <field name="name">gym.workout.plan.form</field>
            <field name="model">gym.workout.plan</field>
            <field name="arch" type="xml">
                <form string="Workout Plan">
                    <header>
                        <button name="action_set_active" type="object" string="Set to Active" invisible="state" class="oe_highlight"/>
                        <button name="action_set_completed" type="object" string="Set to Completed" invisible="state" class="oe_highlight"/>
                        <button name="action_set_cancelled" type="object" string="Cancel Plan" invisible="state not in ['draft', 'active']" confirm="Are you sure you want to cancel this plan?"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. Strength Training, Cardio Focus"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="member_id"/>
                                <field name="trainer_id"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <group string="Plan Details">
                            <field name="goals"/>
                            <field name="routine_description"/>
                        </group>
                        <group string="Progress &amp; Comments">
                            <field name="trainer_comments"/>
                            <field name="progress_notes"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="activity_ids" widget="mail_activity"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_gym_workout_plan" model="ir.actions.act_window">
            <field name="name">Workout Plans</field>
            <field name="res_model">gym.workout.plan</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create a new workout plan</p>
                <p>Design personalized workout routines for members.</p>
            </field>
        </record>

        <record id="gym_diet_plan_view_list" model="ir.ui.view">
            <field name="name">gym.diet.plan.list</field>
            <field name="model">gym.diet.plan</field>
            <field name="arch" type="xml">
                <list string="Diet Plans" decoration-success="state == 'active'" decoration-info="state == 'completed'">
                    <field name="name"/>
                    <field name="member_id"/>
                    <field name="trainer_id"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <record id="gym_diet_plan_view_form" model="ir.ui.view">
            <field name="name">gym.diet.plan.form</field>
            <field name="model">gym.diet.plan</field>
            <field name="arch" type="xml">
                <form string="Diet Plan">
                    <header>
                        <button name="action_set_active" type="object" string="Set to Active" invisible="state" class="oe_highlight"/>
                        <button name="action_set_completed" type="object" string="Set to Completed" invisible="state" class="oe_highlight"/>
                        <button name="action_set_cancelled" type="object" string="Cancel Plan" invisible="state not in ['draft', 'active']" confirm="Are you sure you want to cancel this plan?"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. Low Carb, High Protein"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="member_id"/>
                                <field name="trainer_id"/>
                            </group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <group string="Plan Details">
                            <field name="goals"/>
                            <field name="diet_description"/>
                        </group>
                        <group string="Progress &amp; Comments">
                            <field name="trainer_comments"/>
                            <field name="progress_notes"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="action_gym_diet_plan" model="ir.actions.act_window">
            <field name="name">Diet Plans</field>
            <field name="res_model">gym.diet.plan</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create a new diet plan</p>
                <p>Design personalized diet schedules for members.</p>
            </field>
        </record>
    </data>
</odoo>
