<odoo>
    <data>
        <!-- form view -->
        <record id="gym_class_view_form" model="ir.ui.view">
            <field name="name">gym.class.form</field>
            <field name="model">gym.class</field>
            <field name="arch" type="xml">
                <form string="Gym Class">
                    <header>
                        <button name="action_schedule_class" type="object" string="Schedule Class" class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_complete_class" type="object" string="Mark as Completed" class="oe_highlight" invisible="state != 'scheduled'"/>
                        <button name="action_cancel_class" type="object" string="Cancel Class" confirm="Are you sure you want to cancel this class?" invisible="state not in ['draft', 'scheduled']"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,scheduled,completed,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="e.g. Yoga, HIIT, Zumba"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="trainer_id"/>
                                <field name="start_time"/>
                                <field name="end_time"/>
                            </group>
                            <group>
                                <field name="capacity"/>
                                <field name="current_bookings"/>
                                <field name="available_slots"/>
                                <field name="duration"/>
                            </group>
                        </group>
                        <group string="Description">
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Booked Members" name="booked_members">
                                <button name="action_book_class" type="object" string="Add Member to Class" class="oe_highlight"/>
                                <field name="booked_members_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="member_id"/>
                                        <field name="email"/>
                                        <field name="phone"/>
                                        <field name="subscription_status"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        <!-- list view -->
        <record id="gym_class_view_list" model="ir.ui.view">
            <field name="name">gym.class.list</field>
            <field name="model">gym.class</field>
            <field name="arch" type="xml">
                <list string="Gym Classes" decoration-success="state == 'scheduled'" decoration-danger="state == 'cancelled'" decoration-info="state == 'completed'">
                    <field name="name"/>
                    <field name="trainer_id"/>
                    <field name="start_time"/>
                    <field name="end_time"/>
                    <field name="capacity"/>
                    <field name="current_bookings"/>
                    <field name="available_slots"/>
                    <field name="state"/>
                </list>
            </field>
        </record>
        <!-- search view -->
        <record id="gym_class_view_search" model="ir.ui.view">
            <field name="name">gym.class.search</field>
            <field name="model">gym.class</field>
            <field name="arch" type="xml">
                <search string="Search Classes">
                    <field name="name"/>
                    <field name="trainer_id"/>
                    <field name="state"/>
                    <filter string="Scheduled" name="scheduled_classes" domain="[('state', '=', 'scheduled')]"/>
                    <filter string="Completed" name="completed_classes" domain="[('state', '=', 'completed')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Trainer" name="group_by_trainer_id" context="{'group_by': 'trainer_id'}"/>
                        <filter string="Status" name="group_by_state" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- calendar -->
        <record id="gym_class_view_calendar" model="ir.ui.view">
            <field name="name">gym.class.calendar</field>
            <field name="model">gym.class</field>
            <field name="arch" type="xml">
                <calendar string="Class Schedule" date_start="start_time" date_stop="end_time" color="trainer_id">
                    <field name="name"/>
                    <field name="trainer_id"/>
                    <field name="current_bookings"/>
                    <field name="capacity"/>
                </calendar>
            </field>
        </record>
        <!-- action -->
        <record id="action_gym_class" model="ir.actions.act_window">
            <field name="name">Classes</field>
            <field name="res_model">gym.class</field>
            <field name="view_mode">list,form,calendar</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create a new group class</p>
                <p>Schedule group sessions and manage bookings.</p>
            </field>
        </record>
    </data>
</odoo>
