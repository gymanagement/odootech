<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- form view -->
        <record id="gym_attendance_view_form" model="ir.ui.view">
            <field name="name">gym.attendance.form</field>
            <field name="model">gym.attendance</field>
            <field name="arch" type="xml">
                <form string="Attendance">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1><field name="name" invisible="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="member_id"/>
                                <field name="attendance_date"/>
                                <field name="check_in_time"/>
                                <field name="check_out_time"/>
                            </group>
                            <group>
                                <field name="attendance_type"/>
                                <field name="class_id" invisible="attendance_type != 'class_attendance'"
                                required="attendance_type == 'class_attendance'" />
                                <field name="trainer_id"/>
                                <field name="duration"/>
                            </group>
                        </group>
                        <group>
                            <field name="notes"/>
                        </group>
                        <footer>
                            <button name="action_check_in" type="object" string="Check In" class="oe_highlight" 
                            invisible="check_in_time != False"/>
                            <button name="action_check_out" type="object" string="Check Out" class="oe_highlight" 
                            invisible="check_out_time != False"/>
                        </footer>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>
        <!-- list view -->
        <record id="gym_attendance_view_list" model="ir.ui.view">
            <field name="name">gym.attendance.list</field>
            <field name="model">gym.attendance</field>
            <field name="arch" type="xml">
                <list string="Attendance">
                    <field name="name" invisible="1"/>
                    <field name="member_id"/>
                    <field name="attendance_date"/>
                    <field name="check_in_time"/>
                    <field name="check_out_time"/>
                    <field name="duration"/>
                    <field name="attendance_type"/>
                    <field name="class_id"/>
                    <field name="trainer_id"/>
                </list>
            </field>
        </record>
        <!-- search view -->
        <record id="gym_attendance_view_search" model="ir.ui.view">
            <field name="name">gym.attendance.search</field>
            <field name="model">gym.attendance</field>
            <field name="arch" type="xml">
                <search string="Search Attendance">
                    <field name="member_id"/>
                    <field name="attendance_date"/>
                    <field name="attendance_type"/>
                    <field name="class_id"/>
                    <field name="trainer_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Member" name="group_by_member_id" context="{'group_by': 'member_id'}"/>
                        <filter string="Date" name="group_by_attendance_date" context="{'group_by': 'attendance_date'}"/>
                        <filter string="Type" name="group_by_attendance_type" context="{'group_by': 'attendance_type'}"/>
                        <filter string="Class" name="group_by_class_id" context="{'group_by': 'class_id'}"/>
                        <filter string="Trainer" name="group_by_trainer_id" context="{'group_by': 'trainer_id'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!-- action -->
        <record id="action_gym_attendance" model="ir.actions.act_window">
            <field name="name">Attendance</field>
            <field name="res_model">gym.attendance</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create a new attendance</p>
                <p>Track member and trainer attendance for gym visits and classes.</p>
            </field>
        </record>
    </data>
</odoo>
